---
import DiscordBot from "./cta/DiscordBot.astro";
import WhatsappBot from "./cta/WhatsappBot.astro";
import page from "../lib/pag.js";
import TelegramBot from "./cta/TelegramBot.astro";
export interface Props {}
setInterval(() => {
  if (page.get() === "discord") {
    page.set("whatsapp");
  } else if (page.get() === "telegram") {
    page.set("discord");
  } else if (page.get() === "whatsapp") {
    page.set("telegram");
  }
  page.set("discord");
}, 10000);
/*
var hoverColor = `transition duration-200 cursor-pointer ${
  page.get() == "whatsapp"
    ? "hover:text-whatsapp-green"
    : page.get() == "telegram"
    ? "hover:text-telegram-blue"
    : "hover:text-discord-blurple"
}`;*/
var hoverColor = `transition duration-200 cursor-pointer hover:text-turing-gradient_1`;
---

<>
  <nav
    class="fixed top-4 left-[50%] translate-x-[-50%] w-[90vw] md:w-[80vw] bg-none rounded-lg px-4 py-2 flex flex-row items-center justify-between z-10 select-none"
  >
    <div class="flex flex-row items-center gap-2 cursor-pointer">
      <img src="/favicon.svg" class="rounded-full w-8 h-8" draggable="false" />
      <p>Turing AI</p>
    </div>
    <ul class="flex-row items-center hidden md:flex md:gap-4 list-none">
      <li class={hoverColor}>
        <a
          href="https://discord.com/api/oauth2/authorize?client_id=1053015370115588147&permissions=281357371712&scope=bot%20applications.commands"
          target="_blank">Discord bot</a
        >
      </li>
      <li class={hoverColor}>
        <a href="https://bit.ly/chatgpt-whatsapp" target="_blank"
          >Whatsapp bot</a
        >
      </li>
      <li class={hoverColor}>
        <a href="https://dsc.gg/turing" target="_blank"> Discord Server</a>
      </li>
    </ul>
    <div class={`flex md:hidden ${hoverColor} outline-none`} id="astronav-menu">
      <i class="fa-solid fa-bars astronav-toggle"></i>
      <i class="fa-solid fa-xmark astronav-toggle hidden"></i>
    </div>
  </nav>
  <nav
    class="astronav-toggle fixed top-20 left-[50%] translate-x-[-50%] w-[90vw] md:w-[80vw] rounded-lg px-4 py-2 md:hidden flex-row items-center justify-between z-10 hidden"
  >
    <ul class="flex-col items-start flex gap-2 list-none">
      <li class={hoverColor}>
        <a
          href="https://discord.com/api/oauth2/authorize?client_id=1053015370115588147&permissions=281357371712&scope=bot%20applications.commands"
          target="_blank">Discord bot</a
        >
      </li>
      <li class={hoverColor}>
        <a href="https://bit.ly/chatgpt-whatsapp" target="_blank"
          >Whatsapp bot</a
        >
      </li>
      <li class={hoverColor}>
        <a href="https://dsc.gg/turing" target="_blank"> Discord Server</a>
      </li>
      {
        /*  <li
        class="text-turing-premium/[.8] transition duration-200 hover:text-turing-premium cursor-pointer flex flex-row items-center gap-1"
      >
        <i class="fa-solid fa-crown"></i>
        Premium
      </li>
       */
      }
    </ul>
  </nav>
</>
<script>
  const menuButton = document.getElementById("astronav-menu");
  menuButton.addEventListener("click", () => {
    [...document.querySelectorAll(".astronav-toggle")].forEach((el) => {
      // if is hidden

      if (el.classList.contains("hidden")) {
        el.classList.remove("hidden");
        el.classList.add("animate__fadeIn");
      } else {
        el.classList.add("animate__fadeOut");
        setTimeout(() => {
          el.classList.add("hidden");
        }, 300);
      }

      setTimeout(() => {
        el.classList.remove("animate__fadeOut");
        el.classList.remove("animate__fadeIn");
      }, 300);
    });
  });
</script>
<style>
  .animate__fadeIn {
    animation: fadeIn 0.3s;
    opacity: 1;
  }
  .animate__fadeOut {
    animation: fadeOut 0.3s;
    opacity: 0;
  }
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  @keyframes fadeOut {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }
</style>
