---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" href="/neon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/962d295c08.js"
      crossorigin="anonymous"
      async
      defer
    ></script>
    <title>{title}</title>
  </head>
  <body
    class="text-white min-h-[100vh] h-fit flex overflow-y-auto overflow-x-hidden pb-40"
  >
    <slot />
  </body>
</html>
<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  html {
    font-family: system-ui, sans-serif;
    background-color: #f6f6f6;
    min-height: 100vh;
  }
  body {
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  :root {
    color: #1d1b31;
    background-color: #1d1b31;
    background-image: url("/bg-ping.jpg");
    background-repeat: no-repeat;
    background-size: 100%;
  }

  @media screen and (max-width: 768px) {
    :root {
      color: #000000;
      background-color: #000000;
      background-image: url("/bg-pong.jpg");
      background-size: 170%;
      background-repeat: no-repeat;
    }
  }

  @layer components {
  }
</style>
